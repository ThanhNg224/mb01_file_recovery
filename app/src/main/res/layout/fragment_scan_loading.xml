<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="@color/black"
            android:title="Scanning..."
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center">

        <!-- Scanning State Container -->
        <LinearLayout
            android:id="@+id/scanningContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Animation Container -->
            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center">

                <!-- Lottie Ripple Animation with Gallery Icon -->
                <FrameLayout
                    android:id="@+id/scanningAnimationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <!-- Lottie Ripple Animation  -->

                    <!--  Icon in Center -->

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/scanAnimationView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/scanning_animation"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/scan_in_progress"
                        app:lottie_renderMode="hardware"
                        app:lottie_speed="1.0" />

                    <ImageView
                        android:id="@+id/ivGalleryIcon"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/scanning"
                        android:src="@drawable/icon_photo" />

                </FrameLayout>

                <!-- Done Icon (shown at 100%) -->
                <ImageView
                    android:id="@+id/ivDoneIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:alpha="0"
                    android:contentDescription="@string/completed"
                    android:src="@drawable/done"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Percentage Text -->
            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/maven_pro"
                android:textColor="#2199FF"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="23%" />

            <!-- Hint Text with Loading Animation -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/hintLoadingAnimation"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:indeterminateTint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/tvHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maven_pro"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    tools:text="Scanning media files..." />

            </LinearLayout>

            <!-- Tip Text -->
            <TextView
                android:id="@+id/tvTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maven_pro"
                android:layout_marginTop="22dp"
                android:alpha="0.6"
                android:gravity="center"
                android:paddingHorizontal="6dp"
                android:text="@string/scan_tip"
                android:textColor="?attr/colorOnBackground"
                android:textSize="14sp" />


        </LinearLayout>

        <!-- Empty Result State Container -->
        <LinearLayout
            android:id="@+id/emptyResultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Done Icon -->
            <ImageView
                android:id="@+id/completedAnimationView"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:contentDescription="@string/completed"
                android:src="@drawable/done" />

            <!-- 100% Text -->
            <TextView
                android:fontFamily="@font/maven_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/one_hundred_percent"
                android:textColor="#34C759"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Completed Message -->
            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/maven_pro"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="No photos found on your device!" />

            <!-- Scan Other Documents Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScanOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="32dp"
                android:text="@string/scan_other_documents"
                android:textSize="16sp"
                android:fontFamily="@font/maven_pro"
                android:background="@drawable/gradient_blue"
                app:cornerRadius="22dp" />

        </LinearLayout>

        <!-- Error State Container -->
        <LinearLayout
            android:id="@+id/errorContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:contentDescription="@string/error"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="?attr/colorError" />

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                tools:text="An error occurred" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/retry"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Ad Banner Placeholder -->


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
