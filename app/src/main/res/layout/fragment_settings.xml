<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/home_bg"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/home_bg"
                android:elevation="0dp"
                app:title="@string/setting_title"
                app:titleTextColor="@color/home_text_primary"
                app:titleCentered="true"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/home_text_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- App Section -->
                <TextView
                    android:id="@+id/tvAppSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_app_section"
                    android:textSize="14sp"
                    android:textColor="@color/home_text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp" />

                <!-- Theme -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivThemeIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_theme"
                            android:contentDescription="@string/setting_theme"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/setting_theme"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivThemeIcon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/themeInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:hint="@string/setting_theme"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeWidth="1dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tvTheme"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_max="160dp">

                            <AutoCompleteTextView
                                android:id="@+id/themeDropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textSize="14sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/home_text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Reminder -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivReminderIcon"
                            android:layout_width="22dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/setting_reminder"
                            android:src="@drawable/ic_reminder"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvReminder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/setting_reminder"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivReminderIcon"
                            app:layout_constraintEnd_toStartOf="@id/switchReminder"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Language -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivLanguageIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_language"
                            android:contentDescription="@string/setting_language"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvLanguage"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/setting_language"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ivLanguageIcon"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/languageInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:hint="@string/setting_language"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeWidth="1dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <AutoCompleteTextView
                                android:id="@+id/languageDropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textSize="14sp"
                                android:textColor="@color/home_text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Date Format -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDateFormat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivDateFormatIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="@string/setting_date_format"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvDateFormat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/setting_date_format"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivDateFormatIcon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dateFormatInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:hint="@string/setting_date_format"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxStrokeWidth="1dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tvDateFormat"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_max="160dp">

                            <AutoCompleteTextView
                                android:id="@+id/dateFormatDropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:textSize="14sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/home_text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Others Section -->
                <TextView
                    android:id="@+id/tvOthersSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_others_section"
                    android:textSize="14sp"
                    android:textColor="@color/home_text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp" />

                <!-- Feedback -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivFeedbackIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_feedback"
                            android:contentDescription="@string/setting_feedback"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvFeedback"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/setting_feedback"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivFeedbackIcon"
                            app:layout_constraintEnd_toStartOf="@id/ivFeedbackArrow"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/ivFeedbackArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/setting_feedback"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/home_text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Rate Us -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRateUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivRateUsIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="@string/setting_rate_us"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvRateUs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/setting_rate_us"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivRateUsIcon"
                            app:layout_constraintEnd_toStartOf="@id/ivRateUsArrow"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/ivRateUsArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/setting_rate_us"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/home_text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Privacy Policy -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:backgroundTint="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:minHeight="56dp">

                        <ImageView
                            android:id="@+id/ivPrivacyPolicyIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_privacy"
                            android:contentDescription="@string/setting_privacy_policy"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvPrivacyPolicy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/setting_privacy_policy"
                            android:textColor="@color/home_text_primary"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivPrivacyPolicyIcon"
                            app:layout_constraintEnd_toStartOf="@id/ivPrivacyPolicyArrow"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/ivPrivacyPolicyArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/setting_privacy_policy"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/home_text_secondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Version Text -->
                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_version"
                    android:textSize="12sp"
                    android:textColor="@color/home_text_secondary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>

