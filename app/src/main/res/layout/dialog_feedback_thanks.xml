<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="32dp">

    <!-- White Dialog Box -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_dialog_rounded"
        android:padding="32dp"
        android:elevation="2dp">

        <!-- Thanks Text -->
        <TextView
            android:id="@+id/tvThanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_thanks_title"
            android:textColor="@color/home_accent_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_thanks_subtitle"
            android:textColor="@color/home_text_secondary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvThanks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Rating Stars -->
        <LinearLayout
            android:id="@+id/llRatingStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_star_outline" />
            <ImageView
                android:id="@+id/star2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_star_outline" />
            <ImageView
                android:id="@+id/star3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_star_outline" />
            <ImageView
                android:id="@+id/star4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_star_outline" />
            <ImageView
                android:id="@+id/star5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_star_outline" />
        </LinearLayout>

        <!-- Rate on Google Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRateOnGoogle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="@string/feedback_rate_google"
            android:textAllCaps="false"
            android:fontFamily="@font/maven_pro"
            android:background="@drawable/gradient_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="22dp"
            app:layout_constraintTop_toBottomOf="@id/llRatingStars" />

        <!-- No Thanks Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNoThanks"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/feedback_no_thanks"
            android:textAllCaps="false"
            android:fontFamily="@font/maven_pro"
            android:textColor="#2199FF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnRateOnGoogle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Star ABOVE the white box -->
    <ImageView
        android:id="@+id/ivStar"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="-30dp"
        android:contentDescription="@string/feedback_star"
        android:src="@drawable/star"
        android:elevation="10dp"
        android:translationZ="10dp" />

</FrameLayout>
