<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/black"
        app:titleTextColor="@color/home_text_primary"
        app:menu="@menu/menu_preview_share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Image Container with padding -->
    <ImageView
        android:id="@+id/ivPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Preview image"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/layoutPhotoInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1" />

    <!-- Photo Information Section -->
    <LinearLayout
        android:id="@+id/layoutPhotoInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo information"
            android:textColor="@color/home_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Date created -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date created"
                android:textColor="@color/home_text_secondary"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvDateCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 12, 2025"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size"
                android:textColor="@color/home_text_secondary"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="856 KB"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Link"
                android:textColor="@color/home_text_secondary"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="/Pictures/Screenshots"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Resolution -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resolution"
                android:textColor="@color/home_text_secondary"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1440x900"
                android:textColor="@color/home_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Delete"
            android:textColor="@color/home_accent"
            android:backgroundTint="@android:color/transparent"
            android:drawableLeft="@drawable/ic_delete"
            android:drawablePadding="8dp"
            app:strokeColor="@color/home_accent"
            app:strokeWidth="1dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnRestore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Recover"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/home_accent"
            android:drawableLeft="@drawable/ic_recovery"
            android:drawablePadding="8dp"
            app:icon="@drawable/ic_recovery"
            app:iconTint="@android:color/white"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

