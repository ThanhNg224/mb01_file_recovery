<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <!-- Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMedia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/dialog_primary_blue"
        app:strokeWidth="0dp">

        <!-- Media Thumbnail -->
        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/media_thumbnail"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_video_placeholder" />

        <!-- Video Duration Overlay (for videos only) -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="6dp"
            android:background="#CC000000"
            android:fontFamily="@font/maven_pro"
            android:paddingStart="6dp"
            android:paddingTop="2dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="02:34"
            tools:visibility="visible" />

        <!-- Info Overlay Container (Bottom with Gradient) -->
        <LinearLayout
            android:id="@+id/layoutInfoOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_thumbnail_overlay_gradient"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- File Name (Line 1: Left-aligned, Bold, Larger) -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maven_pro"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="IMG_20231015_143022.jpg" />

            <!-- Line 2: Size and Resolution (Left-aligned, side by side) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <!-- File Size -->
                <TextView
                    android:id="@+id/tvFileSize"
                    android:fontFamily="@font/maven_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:text="2.5 MB" />

                <!-- Spacing between Size and Resolution -->
                <Space
                    android:layout_width="16dp"
                    android:layout_height="1dp" />

                <!-- Resolution -->
                <TextView
                    android:fontFamily="@font/maven_pro"
                    android:id="@+id/tvResolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:text="1920Ã—1080"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>


        <!-- Selection Checkbox (Top Right) -->
        <CheckBox
            android:id="@+id/cbSelectItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/checkbox_circle_selector"
            android:button="@null"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/select_item" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

